<html lang="en">
<%- include ('./partials/head.ejs') %>

    <body>
        <%- include ('./partials/nav.ejs') %>

            <div class="blogs content">
                <h2>All blogs</h2>
                <% if (blogs.length> 0) { %>
                    <% blogs.forEach(blog=> { %>
                        <a classe="single" href="/blogs/<%= blog._id %>">
                        <h3 class="titre">
                            <%= blog.title%>
                        </h3>
                        <p class="titre">
                            <%= blog.snippet%>
                        </p>
                        <% }) %>
                            <% } else { %>
                                <p> there is no posts to display... </p>
                                <% } %>
            </div>
    </body>
    <%- include ('./partials/footer.ejs') %>

</html>